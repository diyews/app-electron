{
  "name": "app-electron",
  "version": "1.0.0",
  "description": "An Electron application",
  "main": "main-release/main.js",
  "build": {
    "appId": "ws.diye",
    "files": [
      "!render${/*}",
      "!tsconfig.json",
      "!main${/*}",
      "!main-release/**/*.js.map"
    ]
  },
  "nsis": {
    "oneClick": true
  },
  "scripts": {
    "start": "electron .",
    "debug": "electron --inspect-brk=5858 .",
    "pack": "tsc && electron-builder --dir",
    "serve": "tsc-watch --onSuccess \"electron .\"",
    "serve:debug": "tsc-watch --onSuccess \"electron --inspect-brk=5858 .\""
  },
  "repository": "",
  "keywords": [
    "Electron",
    "diyews"
  ],
  "author": "diyews",
  "license": "",
  "devDependencies": {
    "electron": "^7.2.4",
    "electron-builder": "^20.43.0",
    "tsc-watch": "^2.2.1",
    "typescript": "^3.5.1"
  }
}
